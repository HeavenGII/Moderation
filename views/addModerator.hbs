<div class="auth">
  <div class="row">
    <div id="login" class="col s6 offset-s3">
        {{#if registerError}}
            <p class="alert">{{registerError}}</p>
        {{/if}}

        <h1>Add Moderator</h1>
        <form action="/moderator/register" method="POST" novalidate>
            <div class="input-field">
                <input id="surname" name="surname" type="text" class="validate" required>
                <label for="surname">Surname</label>
                <span class="helper-text" data-error="input surname"></span>
            </div>

            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="input name"></span>
            </div>

            <div class="input-field">
                <input id="secondname" name="secondname" type="text" class="validate" required>
                <label for="secondname">Secondname</label>
                <span class="helper-text" data-error="input scondname"></span>
            </div>
            
            <div class="input-field">
                <input id="login" name="login" type="text" class="validate" required>
                <label for="login">Login</label>
                <span class="helper-text" data-error="input login"></span>
            </div>

            <div class="input-field">
                <input id="rpassword" name="password" type="password" class="validate" required>
                <label for="rpassword">Password</label>
                <span class="helper-text" data-error="input password"></span>
            </div>

            <div class="input-field">
                <input id="confirm" name="confirm" type="password" class="validate" required>
                <label for="confirm">Password again</label>
                <span class="helper-text" data-error="input password"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">            

            <button class="btn btn-primary" type="submit">Add</button>
        </form>
    </div>
  </div>
</div>
